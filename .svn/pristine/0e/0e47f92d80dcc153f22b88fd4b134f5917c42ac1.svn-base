public class TextUtilities {

	/**
	 * Systemunabhängiger Zeilenumbruch, wie er von {@link System#getProperty(String)}
	 * bereitgestellt wird. 
	 */
	public static final String LINEBREAK = System.getProperty("line.separator");

	/**
	 * Doppelter Zeilenumbruch, wie er von {@link System#getProperty(String)}
	 * bereitgestellt wird. 
	 */
	public static final String DOUBLE_LINEBREAK = LINEBREAK + LINEBREAK;

	/**
	 * Das Tabulatorzeichen 
	 */
	public static final char TABULATOR = '\t';
	
	
}
